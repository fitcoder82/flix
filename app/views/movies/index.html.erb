<h1><%= pluralize(@movies.size, "Movie")%> </h1>

	
<% @movies.each do |movie| %>
	<article>
		<head>
			<h2><%= movie.title %></h2>
		</head>
		<p>
			<%= truncate(movie.description, length: 30, separator: " ") %>
		</p>		

		<table>

			<tr>
				<th>released:</th>
				<td><%= time_ago_in_words movie.released_on %></td>
			</tr>

			<tr>
				<th>Rating</th>
				<td><%= movie.rating %></td>
			</tr>

			<tr>
				<th>Total Gross</th>
				<td><%= format_total_gross(movie) %></td>
			</tr>

		</table>
	</article>
<% end %>